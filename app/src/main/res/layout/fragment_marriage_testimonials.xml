<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pk.nimto.ui.marriagedata.MarriageTestimonialsFragment">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/factor_mdpi_30_dp"
            >

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/testi_switch_compat_marriage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                android:checked="false"
                android:text="@string/update"
                android:textSize="@dimen/textAppearance_mdpi_18_sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <!--  label -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testi_grand_parents_et_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginStart="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                >
                <EditText
                    android:id="@+id/testi_grand_parents_et"
                    android:hint="@string/gramdparent_s_name"
                    style="@style/MarriageTestimonialETStyle"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <!--  label -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testi_parents_et_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginStart="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                >
                <EditText
                    android:id="@+id/testi_parents_et"
                    android:hint="@string/parent_s_name"
                    style="@style/MarriageTestimonialETStyle"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <!--  label -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testi_brothers_et_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginStart="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                >
                <EditText
                    android:id="@+id/testi_brothers_et"
                    android:hint="@string/brother_s_name"
                    style="@style/MarriageTestimonialETStyle"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <!--  label -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testi_sisters_et_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginStart="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                >
                <EditText
                    android:id="@+id/testi_sisters_et"
                    android:hint="@string/sister_s_name"
                    style="@style/MarriageTestimonialETStyle"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <!--  label -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testi_nephews_et_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginStart="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                >
                <EditText
                    android:id="@+id/testi_nephews_et"
                    android:hint="@string/nephew_s_name"
                    style="@style/MarriageTestimonialETStyle"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <!--  label -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testi_cousins_et_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginStart="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                >
                <EditText
                    android:id="@+id/testi_cousins_et"
                    android:hint="@string/cousin_s_name"
                    style="@style/MarriageTestimonialETStyle"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <!--  label Mama/ Maiju-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testi_maternal_et_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_20_dp"
                android:layout_marginStart="@dimen/factor_mdpi_20_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
                >
                <EditText
                    android:id="@+id/testi_maternal_et"
                    android:hint="@string/maternal_uncle_aunt"
                    style="@style/MarriageTestimonialETStyle"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/testi_progressbar_marriage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/factor_mdpi_50_dp"
                    android:visibility="gone"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/marraige_testi_update"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/factor_mdpi_24_dp"
                    android:layout_marginBottom="@dimen/factor_mdpi_24_dp"
                    android:background="@drawable/button_border"
                    android:padding="12dp"
                    android:text="@string/update_contact_info"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/textAppearance_mdpi_24_sp"
                    android:layout_marginStart="@dimen/factor_mdpi_10_dp"
                    android:layout_marginEnd="@dimen/factor_mdpi_150_dp"
                    android:visibility="gone"
                    />

            </FrameLayout>

        </LinearLayout>

</ScrollView>