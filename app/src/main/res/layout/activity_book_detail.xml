<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context="com.pk.nimto.ThemeDetailActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/theme_detail_image"
            android:padding="3dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_theme_update_layout"
            />


        <TextView
            android:id="@+id/theme_detail_name_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name : "
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/theme_detail_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_detail_image" />

        <TextView
            android:id="@+id/theme_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Kim "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight=".7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/theme_detail_name_"
            app:layout_constraintTop_toBottomOf="@+id/theme_detail_image" />


        <TextView
            android:id="@+id/theme_category_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Category : "
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/theme_category"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_detail_name" />

        <TextView
            android:id="@+id/theme_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Marriage "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight=".7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/theme_category_"
            app:layout_constraintTop_toBottomOf="@+id/theme_detail_name" />

        <TextView
            android:id="@+id/theme_price_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Price : "
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/theme_category"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_category" />

        <TextView
            android:id="@+id/theme_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="$2 "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight=".7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/theme_price_"
            app:layout_constraintTop_toBottomOf="@+id/theme_category" />

        <TextView
            android:id="@+id/theme_color_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Color : "
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/theme_category"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_price" />

        <TextView
            android:id="@+id/theme_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Yes "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight=".7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/theme_color_"
            app:layout_constraintTop_toBottomOf="@+id/theme_price" />

        <TextView
            android:id="@+id/theme_detail_desc_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Description : "
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/theme_color_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_color" />

        <TextView
            android:id="@+id/theme_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:text="  Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum. "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_detail_desc_"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            />



        <TextView
            android:id="@+id/theme_detail_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Be first to theme this Invitation theme."
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/theme_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_detail_desc" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_theme_update_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/theme_detail_image"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            >


            <Button
                android:id="@+id/theme_viewas_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="View AS"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/theme_add_to_cart_btn"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Button
                android:id="@+id/theme_add_to_cart_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add to Cart"
                android:textSize="16sp"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/theme_viewas_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
