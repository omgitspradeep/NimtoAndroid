<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.marriagedata.MarriageMeetingPointFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/factor_mdpi_30_dp"
        >

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/mp_switch_compat_marriage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            android:checked="false"
            android:text="@string/update"
            android:textSize="@dimen/textAppearance_mdpi_18_sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <!-- Map label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mp_latitude_et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginStart="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            >
            <EditText
                android:id="@+id/mp_latitude_et"
                android:hint="@string/latitude"
                style="@style/MarriageContactETStyle"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mp_longitude_et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginStart="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            >
            <EditText
                android:id="@+id/mp_longitude_et"
                android:hint="@string/longitude"
                style="@style/MarriageContactETStyle"
                />

        </com.google.android.material.textfield.TextInputLayout>



        <!--  label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mp_direction_info_et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginStart="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            >
            <EditText
                android:id="@+id/mp_direction_info_et"
                android:hint="@string/direction_info"
                style="@style/MarriageTestimonialETStyle"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <!--  label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mp_palace_name_et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginStart="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            >
            <EditText
                android:id="@+id/mp_palace_name_et"
                android:hint="@string/palace_name"
                style="@style/MarriageContactETStyle"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mp_address_et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginStart="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            >
            <EditText
                android:id="@+id/mp_address_et"
                android:hint="@string/address"
                style="@style/MarriageContactETStyle"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <!--  label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mp_contact_num_et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginStart="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            >
            <EditText
                android:id="@+id/mp_contact_num_et"
                android:hint="@string/contact_number"
                android:inputType="phone"
                style="@style/MarriageContactETStyle"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <!--  label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mp_email_or_fb_link_et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/factor_mdpi_20_dp"
            android:layout_marginStart="@dimen/factor_mdpi_20_dp"
            android:layout_marginEnd="@dimen/factor_mdpi_20_dp"
            >
            <EditText
                android:id="@+id/mp_email_or_fb_link_et"
                android:hint="@string/email_or_facebook_link"
                style="@style/MarriageContactETStyle"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/mp_progressbar_marriage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/marraige_mp_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_40_dp"
                android:layout_marginBottom="@dimen/factor_mdpi_24_dp"
                android:background="@drawable/button_border"
                android:padding="12dp"
                android:text="@string/update_testimonials_info"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/textAppearance_mdpi_24_sp"
                android:layout_marginStart="@dimen/factor_mdpi_10_dp"
                android:layout_marginEnd="@dimen/factor_mdpi_10_dp"
                android:visibility="gone"
                />

        </FrameLayout>


    </LinearLayout>
</ScrollView>