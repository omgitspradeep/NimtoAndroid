<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_myorders_card_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/sn_myorder"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="1."
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/name_myorder"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Ram ko behe"
        android:textStyle="bold"
        android:textColor="@color/black"

        />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"

        >
        <ImageButton
            android:id="@+id/viewas_myorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/view"
            android:layout_gravity="center"
            />
    </FrameLayout>



    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/analytics_myorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_show_chart_40"
            android:layout_gravity="center"

            />
    </FrameLayout>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/more_options_myorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_more_vert_40"
            android:backgroundTint="@color/black"
            android:layout_gravity="end"
            />

    </FrameLayout>


</LinearLayout>
