<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.pk.nimto.UpdateProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_layered_waves_haikei"
        android:padding="20dp">

        <TextView
            android:id="@+id/profile_update_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />


        <EditText
            android:id="@+id/profile_update_fn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="First Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            app:layout_constraintEnd_toStartOf="@+id/profile_update_ln"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_header"
            />

        <EditText
            android:id="@+id/profile_update_ln"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Last Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_update_fn"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_header"
            />

        <TextView
            android:id="@+id/profile_update_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="8dp"
            android:inputType="none"
            android:gravity="center_vertical"
            android:hint="Username"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_fn"
            tools:ignore="Deprecated" />


        <View
            android:id="@+id/view0"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_username" />


        <EditText
            android:id="@+id/profile_update_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_email_34"
            android:drawablePadding="8dp"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:hint="E-mail address"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_username" />


        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_email" />

        <EditText
            android:id="@+id/profile_update_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Phone number"
            android:inputType="number"
            android:padding="10dp"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_phone" />


        <EditText
            android:id="@+id/profile_update_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_my_location_24"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Address"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />


        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_address" />

        <LinearLayout
            android:id="@+id/profile_update_country_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:id="@+id/profile_update_address_"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_baseline_house_24"
                android:layout_weight="1"
                />


            <Spinner
                android:id="@+id/profile_update_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/btn_dropdown"
                android:entries="@array/country_array"
                android:gravity="center_vertical"
                android:layout_weight="9"
                android:layout_marginLeft="8dp"
                android:hint="Select Gender"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />


        </LinearLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_country_layout" />



        <CheckBox
            android:id="@+id/book_update_verify_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Verify the details"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:buttonTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/book_update_save_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_border"
            android:padding="3dp"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_update_verify_checkbox" />


        <ProgressBar
            android:id="@+id/PB_profile_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/book_update_save_btn"
            app:layout_constraintBottom_toTopOf="@+id/book_update_motivation"
            app:layout_constraintTop_toBottomOf="@+id/book_update_verify_checkbox"
            android:elevation="2dp"
            android:visibility="gone"
            />



        <TextView
            android:id="@+id/book_update_motivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="किताब पढ्नु बदाम खानु भन्दा उत्तम हो।"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_update_save_btn" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>